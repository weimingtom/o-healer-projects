						<!--Space-->
						<mx:Spacer width="100%" />
						<!--16x16-->
						<comp:GridButton id="gridbutton_shade_16x16" creationComplete="gridbutton_shade_16x16.Init(GridButton.GRID_TYPE_16x16, canvas_shade)" />
